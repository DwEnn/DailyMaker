<?xml version="1.0" encoding="utf-8"?>
<layout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_list"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="15dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="15dp">

    <RadioButton
        android:clickable="false"
        android:buttonTint="@color/colorAppTheme"
        android:layout_centerVertical="true"
        android:id="@+id/music_radio"
        android:layout_marginRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="15dp"
        android:id="@+id/music_img"
        android:src="@drawable/unkown_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/music_radio" />
    <TextView
        android:id="@+id/music_title_tv"
        android:text="temptation"
        android:textSize="15pt"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/music_img" />
    <TextView
        android:maxLines="1"
        android:ellipsize="marquee"
        android:id="@+id/music_artist_tv"
        android:text="joey badass"
        android:textSize="10pt"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/music_title_tv"
        android:layout_toEndOf="@+id/music_img" />

</RelativeLayout>

</layout>